root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[{*.yml, *.graphql}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 2
